        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalAddLabel">Add Educations</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                 
                    <div class="mb-3 row">
                        <label for="txtUniNameAdd" class="col-md-4 col-form-label">University Name</label>
                        <div class="col-md-8">
                            <input class="form-control" type="text" id="txtUniNameAdd">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtLocAdd" class="col-md-4 col-form-label">Location</label>
                        <div class="col-md-8">
                            <input class="form-control" type="text" id="txtLocAdd">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtDepAdd" class="col-md-4 col-form-label">Department</label>
                        <div class="col-md-8">
                            <input class="form-control" type="text" id="txtDepAdd">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtDescAdd" class="col-md-4 col-form-label">Description</label>
                        <div class="col-md-8">
                            <input class="form-control" type="text" id="txtDescAdd">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="dateStartDateAdd" class="col-4 col-form-label">Start Date</label>
                        <div class="col-8">
                            <input type="date" class="form-control" id="dateStartDateAdd">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="dateEndDateAdd" class="col-4 col-form-label">End Date</label>
                        <div class="col-8">
                            <input type="date" class="form-control" id="dateEndDateAdd" >
                        </div>
                    </div>
                    
                    
                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnCancelAdd" class="btn btn-light waves-effect" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="btnConfirmAdd" class="btn btn-primary waves-effect waves-light">Add</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
