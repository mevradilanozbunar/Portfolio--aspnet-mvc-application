@using AreasWithAuth.Models.ViewModels;
@model Allinfo
<div class="page-content">
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-xl-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="text-center">
                           @foreach (var item in Model.Profiles)
                            {
                                <div>
                                    <img src="/ProfilePhotos/@item.ProfilePicture" alt="" class="avatar-lg rounded-circle img-thumbnail">
                                </div>
                                <h5 class="mt-3 mb-1">@item.Name</h5>
                            }
                         
                            <p class="text-muted">Admin</p>

                         
                        </div>

                        <hr class="my-4">

                        <div class="text-muted">
                            

                            @foreach (var item in Model.Profiles)
                            {
                                <div class="table-responsive mt-4">

                                    <div class="mt-4">
                                        <p class="mb-1">Mobile :</p>
                                        <h5 class="font-size-16">@item.Phone</h5>
                                    </div>
                                    <div class="mt-4">
                                        <p class="mb-1">Email :</p>
                                        <h5 class="font-size-16">@item.Email</h5>
                                    </div>
                                    <div class="mt-4">
                                        <p class="mb-1">Linkedin :</p>
                                        <h5 class="font-size-16">@item.Linkedin</h5>
                                    </div>
                                    <div class="mt-4">
                                        <p class="mb-1">Github :</p>
                                        <h5 class="font-size-16">@item.Github</h5>
                                    </div>

                                </div>
                            }
                          
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-8">
                <div class="card mb-0">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs nav-tabs-custom nav-justified" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#about" role="tab">
                                <i class="uil uil-user-circle font-size-20"></i>
                                <span class="d-none d-sm-block">Projects</span>
                            </a>
                        </li>
                       
                    </ul>
                    <!-- Tab content -->
                    <div class="tab-content p-4">
                        <div class="tab-pane active" id="about" role="tabpanel">
                            <div>                             
                                <div>
                                    <h5 class="font-size-16 mb-4">Projects</h5>
                                   

                                    <div class="table-responsive">
                                        <table class="table table-nowrap table-hover mb-0">
                                            <thead>
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col">Projects</th>
                                                    <th scope="col">Date</th>
                                                    <th scope="col">Category</th>
                                             
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int i = 1;

                                                    @foreach (var item in Model.Projects)
                                                    {

                                                        <tr>
                                                            <th scope="row">@i</th>
                                                            <td><a href="#" class="text-dark">@item.Name</a></td>
                                                            <td>
                                                                @item.DateCreated
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-soft-primary font-size-12">@item.ProjectCategory.Name</span>
                                                            </td>
                                                        
                                                        </tr>
                                                        i++;
                                                    }

                                                }
                                                
                                                
                                            </tbody>
                                        </table>
                                       
                                    </div>
                                    <div>
                                        <a asp-area="Admin" asp-controller="Project" asp-action="Index"><button type="button" class="btn btn-success waves-effect waves-light">EDIT</button></a>
                                        
                                    
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

    </div> <!-- container-fluid -->
</div>
<!-- End Page-content -->