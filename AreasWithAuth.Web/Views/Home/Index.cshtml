<section id="experience" class="section section-secondary section-no-border m-0">
					<div class="container">
						<div class="row">
							<div class="col">
								<h2 class="text-color-dark text-uppercase font-weight-extra-bold">Deneyim</h2>
								<section class="timeline custom-timeline" id="timeline">
									<div class="timeline-body">
										@foreach (var item in Model.Experiences)
									{
										
										DateTime dtS = Convert.ToDateTime(@item.StartDate);
													int Startyear = dtS.Year;
										int StartMonth = dtS.Month;
										DateTime dtE = Convert.ToDateTime(@item.EndDate);
													int Endyear = dtE.Year;
													int EndMonth = dtE.Month;
													var diffOfDates = (dtE-dtS).TotalDays;
										int years =(int) diffOfDates / 365;
										int months = (int)(diffOfDates % 365) / 30;
										string StartMonthh=null;
										if(StartMonth <= 9) {StartMonthh = "0" + StartMonth;}
											if(StartMonth > 9) {StartMonthh = "" +StartMonth;}
											string EndMonthh=null;
										if(EndMonth <= 9) {EndMonthh = "0" + EndMonth;}
											if(EndMonth > 9) {EndMonthh = "" +EndMonth;}

										<article class="timeline-box right custom-box-shadow-2">
											<div class="row">
												<div class="experience-info col-lg-3 col-sm-5 bg-color-primary">
													<span class="from text-color-light text-uppercase">
														
														<span class="font-weight-semibold">@StartMonthh/@Startyear</span>
															
													</span>
													@if(@item.EndDate==null) 
													{
														<span class="to text-color-light text-uppercase">

														<span class="font-weight-semibold">Halen</span>
													</span>;
													}
														@if (@item.EndDate != null)
														{
															<span class="to text-color-light text-uppercase">
													
														<span class="font-weight-semibold">@EndMonthh/@Endyear </span>
													</span>;
														}
													
													@if (months == 0)
													{
														<p class="text-color-light">(@years yıl)</p>
													}
													@if(months != 0)  {<p class="text-color-light">(@years yıl @months ay)</p>}
													
													
													<span class="company text-color-light font-weight-semibold">
														@item.CompanyName
														<span class="company-location text-color-light font-weight-normal text-uppercase">@item.Location</span>
													</span>
												</div>
												<div class="experience-description col-lg-9 col-sm-7 bg-color-light">
													<h4 class="text-color-dark font-weight-semibold">@item.Position</h4>
													<p class="custom-text-color-2">@item.Description</p>
												</div>
											</div>
										</article>
									}
										
										<div class="timeline-bar"></div>
									</div>
								</section>
							</div>
						</div>
					</div>
				</section>

